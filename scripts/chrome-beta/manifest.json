{
    "id": "chrome-beta",
    "name": "Chrome Beta",
    "description": "Preview upcoming features before they're released.",
    "check": {
        "command": "cmd /c \"if exist \"C:\\Program Files\\Google\\Chrome Beta\\Application\\chrome.exe\" (exit 0) else (exit 1)\"",
        "type": "cmd"
    },
    "install": {
        "command": "install.bat"
    },
    "uninstall": {
        "command": "winget uninstall Google.Chrome.Beta"
    },
    "locate": {
        "command": "echo C:\\Program Files\\Google\\Chrome Beta\\Application\\chrome.exe"
    }
}